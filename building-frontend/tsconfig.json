{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["lib/*"],
      "@/api/*": ["api/*"],
      "@/components/*": ["components/*"],
      "@/ui/*": ["ui/*"],
      "@/store/*": ["store/*"],
      "@/modules/*": ["modules/*"],
      "@/types/*": ["types/*"],
      "@/styles/*": ["styles/*"],
      "@/hooks": ["hooks"],
      "@/layout": ["layout"],
      "@/form-fields": ["form-fields"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
